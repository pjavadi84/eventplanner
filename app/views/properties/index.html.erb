<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= link_to "create property", new_user_property_path(current_user) %>


<h1>All properties: </h1>
<table class="table">
  <caption>List of properties</caption>
  <thead>
    <tr>
      <th scope="col">property_name</th>
      <th scope="col">details</th>
      <th scope="col" >maximum capacity</th>
    </tr>
  </thead>
  <tbody>
  <% @properties.each do |c| %>
    <tr>
      <td><%= c.property_name %></td>
      <td><%= link_to "show details", user_property_path(c.user, c)  if c.user %></td>
      <td id="maximum_cap"><%= c.maximum_occupancy %>
    </tr>
  <% end %>
  </tbody>
</table>
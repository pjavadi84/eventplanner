<h2>Create a property</h2>

<% if @property.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@property.errors.count, "error") %>: can't create property because: </h4>

    <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@property) do |f| %>
  <div class="form-row align-items-center">
    <div class="col-auto my-1">
     <%= user_id_field(@property) %>
     
      <%= f.label :property_name %>
      <%= f.text_field :property_name %>
      <br>
      <%= f.label :event_type %>
      <%= f.text_field :event_type %>
      <br>
      <%= f.label :date_created %>
      <%= f.date_field :date_created %>
      <br>
      <%= f.label :maximum_occupancy %>
      <%= f.number_field :maximum_occupancy %>
      <br>
      <br>
      <h4>Address Information</h4>
      <div class="address_group">
        <%= f.label :address %>
        <%= f.text_field :address %>
        <br>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <br>
        <%= f.label :state %>
        <%= f.text_field :state %>
        <br>
        <%= f.label :zipcode %>
        <%= f.text_field :zipcode %>
      </div>
    <br>

    <%= f.submit "Create Property" %>
    <%= link_to "back to all properties", user_properties_path(current_user) %>
    </div>
<% end %>


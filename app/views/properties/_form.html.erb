<h2>Create a property</h2>
<%= form_for @property do |f| %>
  <div class="form-row align-items-center">
    <div class="col-auto my-1">
      <%= f.label :event_type %>
      <%= f.text_field :event_type %>
      <br>
      <%= f.label :maximum_occupancy %>
      <%= f.number_field :maximum_occupancy %>
      <br>
      <br>
      <h4>Address Information</h4>
      <div class="address_group">
        <%= f.label :address %>
        <%= f.text_field :address %>
        <br>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <br>
        <%= f.label :state %>
        <%= f.text_field :state %>
        <br>
        <%= f.label :zipcode %>
        <%= f.text_field :zipcode %>
      </div>
    <br>

    <%= f.submit "Create Property" %>
    </div>
<% end %>


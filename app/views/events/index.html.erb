<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if current_user %>
  <%= link_to "create an event", new_property_event_path(current_user) %>
<% else %>
  <%= link_to "see events", events_path %>
<% end %>


<h1>All events: </h1>
<table class="table">
  <caption>List of events</caption>
  <thead>
    <tr>
      <th scope="col">Event name</th>
      <th scope="col">details</th>
    </tr>
  </thead>
  <tbody>
  <% @events.each do |e| %>
    <tr>
      <td><%= e.event_name %></td>
      <% if current_user %>
        <td><%= link_to "show details", user_event_path(e, current_user) %></td>
      <% else %>
        <td><%= link_to "register or login to check details", signup_path %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
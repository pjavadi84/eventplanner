<% if @event.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved because:</h4>
 
    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>Create an event</h2>

<%= form_for(@event) do |f| %>
    <div class="form-for align-items-center">
        <div class="col-auto my-1">
            <%= property_id_field(@event) %>

            <%= f.label :event_name %>
            <%= f.text_field :event_name %>
            <br>
            <%= f.label :ticket_price %>
            <%= f.number_field :ticket_price %>
            <br>
            <%= f.label :minimum_age %>
            <%= f.number_field :minimum_age %>
            <br>
            <%= f.label :number_of_guests %>
            <%= f.number_field :number_of_guests %>
            <br>
            <%= f.label :event_date %>
            <%= f.date_field :event_date %>
            <br>
            <%= f.label :event_time %>
            <%= f.time_field :event_time %>
            <br>
            <%= f.submit "Create event" %>
        </div>
    <br>


<%= link_to "back to all events", property_events_path(current_user) %>

    </div>
<% end %>